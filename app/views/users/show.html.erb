<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image %>
  
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><% @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><% @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <% if @user == current_user %>
      <%= link_to "User編集（仮）", edit_user_path(@user.id) %>
    <% end %>
  </div>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :opinion %>
    <%= f.submit "Create Book" %>
  <% end %>
</div>

<div>
  <h2>Books</h2>
    <% @books.each do |books| %>
    <div>
      <%= image_tag @user.get_profile_image %>
    </div>
    <p>Title</p>
    <p><%= books.title %></p>
    <p>Opinion</p>
    <p><%= books.body %></p>
    <% end %
</div>