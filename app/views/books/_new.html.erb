<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>current_user_introduction</th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <% if user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <%= f.text_field :title, class:"" %>
    <%= f.text_area :body, class:"", rows:"3" %>
    <%= f.submit "Create Book", class:"btn" %>
  <% end %>
</div>