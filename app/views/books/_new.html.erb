<div class="col-md-3">
  <h2>User info</h2>
  <!--image-->
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th>current_user_name</th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>current_user_introduction</th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    btn create
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <%= f.text_field :title, class:"" %>
    <%= f.text_area :body, class:"", rows:"3" %>
    <%= f.submit "Create Book", class:"btn" %>
  <% end %>
</div>